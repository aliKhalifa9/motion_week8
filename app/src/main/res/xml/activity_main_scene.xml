<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:tools="urn:oasis:names:tc:xliff:document:1.2"
    app:ignore="NamespaceTypo">

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/imageView"
            android:layout_width="412dp"
            android:layout_height="261dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.002"
            motion:layout_constraintVertical_bias="0.0"
            motion:layout_editor_absoluteX="-1dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent" />

        <Constraint
            android:id="@+id/imageView"
            android:layout_width="412dp"
            android:layout_height="261dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.002"
            app:srcCompat="@drawable/ali_motion"
            tools:layout_editor_absoluteX="0dp"
            motion:layout_constraintVertical_bias="0.0"
            motion:layout_editor_absoluteX="-1dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent" />
        <Constraint
            android:layout_height="0dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="260dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintHorizontal_bias="0.0"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="416dp"
            android:id="@+id/textViewsfs"
            motion:layout_editor_absoluteY="357dp" />

    </ConstraintSet>



    <ConstraintSet android:id="@+id/end">

        <Constraint
            android:id="@+id/imageView"
            android:layout_width="111dp"
            android:layout_height="73dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_editor_absoluteX="16dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintVertical_bias="1.0"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_editor_absoluteY="659dp" />

        <Constraint
            android:id="@+id/textViewsfs"
            android:layout_width="430dp"
            android:layout_height="72dp"
            android:layout_marginTop="260dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintVertical_bias="1.0"
            motion:layout_constraintStart_toEndOf="@+id/imageView"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="236dp"
            android:layout_marginStart="236dp"
            motion:layout_editor_absoluteX="112dp"
            motion:layout_editor_absoluteY="659dp" />
        <Constraint
            android:layout_height="72dp"
            motion:layout_goneMarginEnd="0dp"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_width="430dp"
            android:id="@+id/textViewsfs"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintVertical_bias="1.0"
            motion:layout_constraintStart_toEndOf="@+id/imageView"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="236dp"
            android:layout_marginStart="236dp"
            motion:layout_editor_absoluteX="112dp"
            motion:layout_editor_absoluteY="659dp" />
    </ConstraintSet>




    <Transition motion:constraintSetEnd="@id/end"
        motion:constraintSetStart="@id/start">
        <OnSwipe motion:touchAnchorId="@+id/imageView"
            motion:dragDirection="dragUp"/>

    </Transition>
</MotionScene>